{
	"version": "0.4.0",
	"description": "A class-based virtual DOM for XML and HTML. Designed to be as simple and flexible as possible.",
	"main": "dist/index.cjs",
	"module": "dist/index.mjs",
	"exports": {
		"require": "./dist/index.cjs",
		"import": "./dist/index.mjs"
	},
	"scripts": {
		"dev": "clear && node dev/sandbox.js",
		"test": "node --test test.js",
		"build:dist": "rollup -c",
		"build:docs": "typedoc --options ./typedoc/typedoc.config.mjs",
		"deploy:docs": "gh-pages -d docs"
	},
	"keywords": [
		"dom",
		"vdom",
		"virtual",
		"virtual dom"
	],
	"author": "Jacob Lockett",
	"license": "MIT",
	"name": "virty",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jacoblockett/virty.git"
	},
	"files": [
		"dist/",
		"LICENSE",
		"README.md"
	],
	"dependencies": {
		"alltheutils": "^0.2.1"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^29.0.0",
		"@rollup/plugin-node-resolve": "^16.0.3",
		"@shipgirl/typedoc-plugin-versions": "^0.3.2",
		"rollup": "^4.53.2",
		"typedoc": "^0.28.15",
		"typedoc-material-theme": "^1.4.1",
		"typedoc-plugin-versions": "^0.2.4"
	}
}
